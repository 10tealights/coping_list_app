<div class="mt-3">
	<% flash.each do |message_type, message| %>
		<% if message_type == 'notice' %>
			<div class="w-full text-green-700 bg-green-200 rounded-lg">
				<div class="container flex items-center justify-between px-6 py-4 mx-auto">
					<div class="flex">
						<svg viewBox="0 0 40 40" class="w-6 h-6 fill-current">
							<path d="M20 3.33331C10.8 3.33331 3.33337 10.8 3.33337 20C3.33337 29.2 10.8 36.6666 20 36.6666C29.2 36.6666 36.6667 29.2 36.6667 20C36.6667 10.8 29.2 3.33331 20 3.33331ZM16.6667 28.3333L8.33337 20L10.6834 17.65L16.6667 23.6166L29.3167 10.9666L31.6667 13.3333L16.6667 28.3333Z"></path>
						</svg>
						<p class="mx-3"><%= message %></p>
					</div>
				</div>
			</div>
		<% else %>
			<div class="w-full text-yellow-700 bg-yellow-200 rounded-lg">
				<div class="container flex items-center justify-between px-6 py-4 mx-auto">
					<div class="flex">
						<svg class="w-6 h-6 fill-current" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
							<path d="M20 3.33331C10.8 3.33331 3.33337 10.8 3.33337 20C3.33337 29.2 10.8 36.6666 20 36.6666C29.2 36.6666 36.6667 29.2 36.6667 20C36.6667 10.8 29.2 3.33331 20 3.33331ZM21.6667 28.3333H18.3334V25H21.6667V28.3333ZM21.6667 21.6666H18.3334V11.6666H21.6667V21.6666Z"/>
						</svg>
						<p class="mx-3"><%= message %></p>
					</div>
				</div>
			</div>
		<% end %>
	<% end %>
</div>